<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.StorageSearchController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane fx:id="mainPane" prefHeight="326.0" prefWidth="564.0">
            <children>
                <Label layoutX="60.0" layoutY="10.0" text="Просмотр списка всех складов, отсортированных по названию на текущую дату" />

                <Button fx:id="searchButton" layoutX="25.0" layoutY="270.0" mnemonicParsing="false" text="Найти" />
                <Button fx:id="cancelButton" layoutX="508.0" layoutY="270.0" mnemonicParsing="false" text="Назад" />

                <TableView fx:id="resultTableView" layoutX="25.0" layoutY="60.0" prefHeight="200.0" prefWidth="530.0">
                    <columns>
                        <TableColumn fx:id="storageNumberTableColumn" prefWidth="180.0" text="Код склада" />
                        <TableColumn fx:id="storageNameTableColumn" prefWidth="180.0" text="Название склада" />
                        <TableColumn fx:id="storagePhoneTableColumn" prefWidth="170.0" text="Телефон склада" />
                    </columns>
                </TableView>
            </children></Pane>
    </children>
</GridPane>
